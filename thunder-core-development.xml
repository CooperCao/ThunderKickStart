    <project name="ThunderInterfaces" 
        remote="RDKCentral" 
        path="source/ThunderInterfaces" 
        revision="master" 
        clone-depth="1">
    </project>

    <project name="ThunderClientLibraries" 
        remote="RDKCentral" 
        path="source/ThunderClientLibraries" 
        revision="master" 
        clone-depth="1">
